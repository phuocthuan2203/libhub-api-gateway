{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user-service-route": {
        "ClusterId": "user-service-cluster",
        "Match": { "Path": "/api/users/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/users/{**catch-all}" } ]
      },
      "book-service-route": {
        "ClusterId": "book-service-cluster",
        "Match": { "Path": "/api/books/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/books/{**catch-all}" } ]
      },
      "borrow-service-route": {
        "ClusterId": "borrow-service-cluster",
        "Match": { "Path": "/api/borrow/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/{**catch-all}" } ]
      }
    },
    "Clusters": {
      "user-service-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5001" }
        }
      },
      "book-service-cluster": {
        "Destinations": { "destination1": { "Address": "http://localhost:5002" } }
      },
      "borrow-service-cluster": {
        "Destinations": { "destination1": { "Address": "http://borrow-service" } },
        "ServiceDiscovery": { "Provider": "Consul", "ServiceName": "borrow-service" }
      }
    }
  },
  "Consul": {
    "Address": "http://localhost:8500"
  }
}
